<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane fx:id="loginBorderPane" prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: #407de3" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sae.sae_juba_antoine_said.controlleur.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" text="Se connecter" />
                <TextField fx:id="identifiant" maxWidth="300.0" promptText="Identifiant" />
                <TextField fx:id="motDePasse" maxWidth="300.0" promptText="Mot de passe" />
                <Button fx:id="ajouter" onAction="#inserer" styleClass="primaryButton" text="Valider" />
                <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
            </children>
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="retourButton" onAction="#retourButtonAction" styleClass="primaryButton" text="Retour" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
