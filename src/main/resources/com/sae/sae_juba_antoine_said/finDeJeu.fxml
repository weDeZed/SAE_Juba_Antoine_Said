<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPaneId" stylesheets="@css/finDeJeu.css" prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sae.sae_juba_antoine_said.controlleur.ControlleurFinDeJeu">
    <ImageView fitWidth="${anchorPaneId.prefWidth}" fitHeight="${anchorPaneId.prefHeight}">
        <image>
            <Image url="@images/gameOver.jpg" />
        </image>
    </ImageView>
    <Button fx:id="relancerButton" onAction="#relancerJeu" layoutX="620.0" layoutY="700.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Relancer" />
    <Button fx:id="quitButton"  onAction="#quitJeu" layoutX="730.0" layoutY="700.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Quitter" />

</AnchorPane>
